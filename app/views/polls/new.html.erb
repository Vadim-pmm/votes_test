<h2>Создание опроса :</h2>
<div class="col-md-6">
  <%= form_tag polls_path, method: :post, class: "form-group" do %>
      <%= label_tag :name, 'Название', class: 'label label-default' %>
      <%= text_field_tag :name, nil, placeholder: 'Название опроса', class: 'form-control' %>

      <%= select_tag(:qbox_id, options_for_select(@question_box_list, 1), {:class => 'form-control', :multiple => false}) %>

      <br />

      <%= submit_tag 'Создать опрос', class: "btn btn-success btn-sm" %>
  <% end %>
</div>
